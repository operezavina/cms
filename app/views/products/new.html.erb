<h1>Create new product</h1>

<%= form_for @product do |form| %>
    <p>
      <%= form.label :name %>
      <%= form.text_field :name %>
    </p>

    <p>
      <%= form.label :description %>
      <%= form.text_field :description %>
    </p>
    <p>
      <%= form.file_field :photo %>
    </p>
    <p>
      <%= form.label :price %>
      <%= form.text_field :price %>
    </p>
    <%= form.submit "Save" %>
<% end %>